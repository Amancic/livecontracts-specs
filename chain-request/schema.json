{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://specs.livecontracts.io/draft-01/chain-request/schema.json#",
    "title": "Live Contracts Chain request schema",
    "description": "A request for a (portion of) an event chain",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string",
            "format": "uri"
        },
        "id": {
            "description": "Event chain id",
            "type": "string",
            "format": "uri"
        },
        "body": {
            "description": "Body of the event",
            "type": "string",
            "contentEncoding": "base64",
            "contentMediaType": "application/json"
        },
        "timestamp": {
            "description": "Time of the event",
            "type": "string",
            "format": "date-time"
        },
        "signkey": {
            "description": "Public key for signature",
            "type": "string"
        },
        "signature": {
            "description": "Cryptographic signature",
            "type": "string"
        },
        "hash": {
            "description": "Hash of the event",
            "type": "string"
        }
    },
    "required": [ "$schema", "id", "body", "previous", "signkey", "signature", "hash" ],
    "definitions": {
        "request_body": {
            "$id": "#request-body",
            "description": "Receipt for anchoring",
            "type": "object",
            "properties": {
                "from": {
                    "description": "Blockchain used",
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "array",
                            "items": { "type": "string" }
                        }
                    ]
                },
                "encryptkey": {
                    "description": "Public cryptographic key for encryption",
                    "type": "string"
                }
            }
        },
        "denied_response": {
            "$id": "#denied-response",
            "title": "Live Contracts Denied response schema",
            "description": "Response for a denied request",
            "type": "object",
            "properties": {
                "$schema": {
                    "type": "string",
                    "format": "uri"
                },
                "id": {
                    "description": "Event chain id",
                    "type": "string",
                    "format": "uri"
                },
                "body": {
                    "description": "Comment explaining why the request is denied",
                    "type": "string",
                    "contentEncoding": "base64",
                    "contentMediaType": "application/json"
                },
                "timestamp": {
                    "description": "Time of the response",
                    "type": "string",
                    "format": "date-time"
                },
                "previous": {
                    "description": "Hash of the request",
                    "type": "string",
                    "pattern": "[A-F0-9]{64}"
                },
                "signkey": {
                    "description": "Public key for signature",
                    "type": "string"
                },
                "signature": {
                    "description": "Cryptographic signature",
                    "type": "string"
                },
                "hash": {
                    "description": "Hash of the response",
                    "type": "string"
                }
            }
        }
    }
}
