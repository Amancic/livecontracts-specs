{
    "foo": {
        "bar": {
            "qux": 12345
        },
        "term": "data enrichment",
        "city": "Amsterdam",
        "country": "Netherlands"
    },
    "amount": {
        "<ref>": "foo.bar.qux"
    },
    "message": {
        "<tpl>": "I want to go to {{ foo.city }}, {{ foo.country }}"
    },
    "shipping": {
        "<switch>": {
            "on": { "<ref>": "foo.country" },
            "options": {
                "USA": "UPS",
                "Netherlands": "PostNL"
            },
            "default": "DHL"
        }
    },
    "user": {
        "<src>": "https://api.example.com/users/9870"
    },
    "search_results": {
        "<apply>": {
            "query": "RelatedTopics[].{url: FirstURL, description: Text}",
            "input": {
                "<src>": {
                    "<tpl>": "http://api.duckduckgo.com/?q={{ foo.term }}&format=json"
                }
            }
        }
    },
    "profile": {
        "<merge>": [
            {
                "<ref>": "foo.bar"
            },
            {
                "<hash>": {
                    "algo": "md5",
                    "input": "foo"
                }
            },
            {
                "<src>": "https://api.example.com/zoo/99"
            },
            {
                "apples": 100,
                "pears": 220
            }
        ]
    }
}