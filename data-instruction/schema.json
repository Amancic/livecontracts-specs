{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://specs.livecontracts.io/draft-01/data-instruction/schema.json#",
    "title": "Live Contracts data instructions schema",
    "description": "Data instructions are applied when a scenario state or action is instantiated",
    "type": "object",
    "oneOf": [
        { "$ref": "#ref" },
        { "$ref": "#equal" },
        { "$ref": "#match" },
        { "$ref": "#if" },
        { "$ref": "#switch" },
        { "$ref": "#sum" },
        { "$ref": "#merge" },
        { "$ref": "#enrich" },
        { "$ref": "#tpl" },
        { "$ref": "#apply" },
        { "$ref": "#replace" },
        { "$ref": "#join" },
        { "$ref": "#dateformat" },
        { "$ref": "#hash" },
        { "$ref": "#encode" },
        { "$ref": "#decode" },
        { "$ref": "#serialize" },
        { "$ref": "#unserialize" },
        { "$ref": "#encrypt" },
        { "$ref": "#decrypt" },
        { "$ref": "#sign" },
        { "$ref": "#verify" }
    ],
    "definitions": {
        "ref": {
            "$id": "#ref",
            "description": "Resolve a reference to data in the projected process",
            "type": "object",
            "properties": {
                "<ref>": {
                    "description": "JMESPath expression",
                    "$ref": "#/definitions/stringdi"
                }
            },
            "required": [ "<ref>" ]
        },
        "equal": {
            "$id": "#equal",
            "description": "Compare if two values are equal",
            "type": "object",
            "properties": {
                "<equal>": {
                    "type": "array",
                    "minItems": 2,
                    "maxItems": 2
                }
            },
            "required": [ "<equal>" ]
        },
        "match": {
            "$id": "#match",
            "description": "Find substring or match against regex",
            "type": "object",
            "properties": {
                "<match>": {
                    "type": "object",
                    "oneOf": [
                        {
                            "properties": {
                                "input": { "$ref": "#/definitons/stringdi" },
                                "find": { "$ref": "#/definitons/stringdi" }
                            },
                            "required": [ "input", "find" ]
                        },
                        {
                            "properties": {
                                "input": { "$ref": "#/definitons/stringdi" },
                                "regex": { "$ref": "#/definitons/stringdi" },
                                "flags": { "$ref": "#/definitons/stringdi" }
                            },
                            "required": [ "input", "regex" ]
                        }
                    ]
                }
            },
            "required": [ "<match>" ]
        },
        "if": {
            "$id": "#if",
            "description": "Validate a conditional expression",
            "type": "object",
            "properties": {
                "<if>": {
                    "type": "object",
                    "properties": {
                        "condition": {
                            "$ref": "#/definitions/booleandi"
                        },
                        "then": {
                            "description": "Selected if condition is true"
                        },
                        "else": {
                            "description": "Selected if condition is false"
                        }
                    },
                    "required": [ "condition" ]
                }
            },
            "required": [ "<if>" ]
        },
        "switch": {
            "$id": "#switch",
            "description": "Select on of the options ",
            "type": "object",
            "properties": {
                "<switch>": {
                    "type": "object",
                    "properties": {
                        "on": {
                            "description": "Value to select on",
                            "$ref": "#/definitions/stringdi"
                        },
                        "options": {
                            "description": "Key/value pairs",
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "required": [ "on", "options", "" ]
                }
            },
            "required": [ "<switch>" ]
        },
        "sum": {
            "$id": "#sum",
            "description": "Calculate the sum",
            "type": "object",
            "properties": {
                "<sum>": {
                    "oneOf": [
                        {
                            "type": "array",
                            "items": { "type": "number" }
                        },
                        { "$ref": "#" }
                    ]
                }
            },
            "required": [ "<sum>" ]
        },
        "merge": {
            "$id": "#merge",
            "description": "Merge multiple arrays or objects",
            "type": "object",
            "properties": {
                "<merge>": {
                    "type": "array",
                    "$comment": "Values add need to be of the same type",
                    "oneOf": [
                        {
                            "items": { "$ref": "#/definitions/objectdi" }
                        },
                        {
                            "items": { "$ref": "#/definitions/arraydi" }
                        }
                    ]
                }
            },
            "required": [ "<merge>" ]
        },
        "enrich": {
            "$id": "#enrich",
            "description": "Enrich an object with extra data by matching properties",
            "type": "object",
            "properties": {
                "<enrich>": {
                    "type": "object",
                    "properties": {
                        "input": {
                            "description": "Input data",
                            "$ref": "#/definitions/objectdi"
                        },
                        "extra": {
                            "description": "Array with additional data",
                            "oneOf": [
                                {
                                    "type": "array",
                                    "items": {
                                        "type": "object"
                                    }
                                },
                                { "$ref": "#" }
                            ]
                        },
                        "match": {
                            "description": "Property to match an item of addtional data on",
                            "$ref": "#/definitions/stringdi"
                        }
                    },
                    "required": [ "input", "extra", "match" ]
                }
            },
            "required": [ "<enrich>" ]
        },
        "tpl": {
            "$id": "#tpl",
            "description": "Parse text as Mustache template",
            "type": "object",
            "properties": {
                "<tpl>": {
                    "$ref": "#/definitions/stringdi"
                }
            },
            "required": [ "<tpl>" ]
        },
        "apply": {
            "$id": "#apply",
            "description": "Apply JMESPath expressions to data",
            "type": "object",
            "properties": {
                "<apply>": {
                    "type": "object",
                    "properties": {
                        "input": {
                            "description": "Input data",
                            "$ref": "#/definitions/objectdi"
                        },
                        "expression": {
                            "description": "JMESPath expression",
                            "$ref": "#/definitions/stringdi"
                        }
                    },
                    "required": [ "input", "expression" ]
                }
            },
            "required": [ "<apply>" ]
        },
        "replace": {
            "$id": "#replace",
            "description": "Replace substring or replace using regex",
            "type": "object",
            "properties": {
                "<match>": {
                    "type": "object",
                    "oneOf": [
                        {
                            "properties": {
                                "input": { "$ref": "#/definitons/stringdi" },
                                "find": { "$ref": "#/definitons/stringdi" },
                                "replacement": { "$ref": "#/definitons/stringdi" }
                            },
                            "required": [ "input", "find", "replacement" ]
                        },
                        {
                            "properties": {
                                "input": { "$ref": "#/definitons/stringdi" },
                                "regex": { "$ref": "#/definitons/stringdi" },
                                "flags": { "$ref": "#/definitons/stringdi" },
                                "replacement": { "$ref": "#/definitons/stringdi" }
                            },
                            "required": [ "input", "regex", "replacement" ]
                        }
                    ]
                }
            },
            "required": [ "<match>" ]
        },
        "join": {
            "$id": "#join",
            "description": "Join an array of strings",
            "type": "object",
            "properties": {
                "<join>": {
                    "typeof": "object",
                    "properties": {
                        "input": {
                            "type": "array",
                            "items": { "$ref": "#/definitions/stringdi" }
                        },
                        "glue": {
                            "type": "string",
                            "default": ""
                        }
                    },
                    "required": [ "input" ]
                }
            },
            "required": "<join>"
        },
        "numberformat": {
            "$id": "#format",
            "description": "Format a number by locale",
            "type": "object",
            "properties": {
                "<numberformat>": {
                    "properties": {
                        "input": {
                            "description": "Input number",
                            "$ref": "#/definitions/numberdi"
                        },
                        "decimals": {
                            "description": "Number of decimals",
                            "$ref": "#/definitions/stringdi"
                        },
                        "locale": {
                            "description": "ISO 639 / 3166 locale",
                            "$ref": "#/definitions/stringdi",
                            "default": "en_US"
                        },
                        "currency": {
                            "$ref": "#/definitions/stringdi"
                        }
                    },
                    "required": [ "input" ]
                }
            }
        },
        "dateformat": {
            "$id": "#dateformat",
            "description": "Format a date",
            "properties": {
                "<dateformat>": {
                    "input": {
                        "description": "Date",
                        "$ref": "#/definitions/stringdi"
                    },
                    "input_format": {
                        "description": "Input format",
                        "$comment": "Defaults to ISO-8601",
                        "$ref": "#/defintions/stringdi"
                    },
                    "format": {
                        "description": "Output format",
                        "$ref": "#/definitions/stringdi"
                    },
                    "locale": {
                        "description": "ISO 639 / 3166 locale",
                        "$ref": "#/definitions/stringdi"
                    }
                },
                "required": [ "input" ]
            },
            "required": [ "<dateformat>" ]
        },
        "hash": {
            "$id": "#hash",
            "description": "Hash a string",
            "properties": {
                "<hash>": {
                    "properties": {
                        "input": {
                            "$ref": "#/definitions/stringdi"
                        },
                        "algo": {
                            "description": "Hashing algorithm",
                            "type": "string",
                            "enum": [ "md5", "sha1", "sha256", "sha512", "crc32" ]
                        },
                        "hmac": {
                            "description": "Shared secret key used for generating the HMAC variant",
                            "$ref": "#/definitions/stringdi"
                        }
                    },
                    "required": [ "input", "algo" ]
                }
            },
            "required": [ "<hash>" ]
        },
        "encode": {
            "$id": "#encode",
            "description": "Encode a string",
            "properties": {
                "<encode>": {
                    "properties": {
                        "input": {
                            "$ref": "#/definitions/stringdi"
                        },
                        "algo": {
                            "description": "Encoding algorithm",
                            "type": "string",
                            "enum": [ "base64", "base58", "url" ]
                        }
                    },
                    "required": [ "input", "algo" ]
                }
            },
            "required": [ "<encode>" ]
        },
        "decode": {
            "$id": "#decode",
            "description": "Decode a string",
            "properties": {
                "<decode>": {
                    "properties": {
                        "input": {
                            "$ref": "#/definitions/stringdi"
                        },
                        "algo": {
                            "description": "Encoding algorithm",
                            "type": "string",
                            "enum": [ "base64", "base58", "url" ]
                        }
                    },
                    "required": [ "input", "algo" ]
                }
            },
            "required": [ "<decode>" ]
        },
        "serialize": {
            "$id": "#serialize",
            "description": "Serialize a value",
            "properties": {
                "<serialize>": {
                    "properties": {
                        "input": { },
                        "format": {
                            "type": "string",
                            "enum": [ "json", "url" ]
                        }
                    },
                    "required": [ "input", "format" ]
                }
            },
            "required": [ "<serialize>" ]
        },
        "unserialize": {
            "$id": "#unserialize",
            "description": "Unserialize a value",
            "properties": {
                "<serialize>": {
                    "properties": {
                        "input": { },
                        "format": {
                            "type": "string",
                            "enum": [ "json", "url" ]
                        }
                    },  
                    "required": [ "input", "format" ]
                }
            },
            "required": [ "<unserialize>" ]
        },
        "encrypt": {
            "$id": "#encrypt",
            "description": "Encrypt data",
            "properties": {
                "<encrypt>": {
                    "properties": {
                        "input": {
                            "$ref": "#/definitions/stringdi"
                        },
                        "algo": {
                            "description": "Encryption algorithm",
                            "type": "string"
                        },
                        "key": {
                            "description": "Cryptographic key",
                            "$ref": "#/definitions/stringdi"
                        },
                        "passphrase": {
                            "description": "Passphrase for the key",
                            "$ref": "#/definitions/stringdi"
                        }
                    },
                    "required": [ "input", "algo", "key" ]
                }
            },
            "required": [ "<encrypt>" ]
        },
        "decrypt": {
            "$id": "#decrypt",
            "description": "Decrypt data",
            "properties": {
                "<decrypt>": {
                    "properties": {
                        "input": {
                            "$ref": "#/definitions/stringdi"
                        },
                        "algo": {
                            "description": "Encryption algorithm",
                            "type": "string"
                        },
                        "key": {
                            "description": "Cryptographic key",
                            "$ref": "#/definitions/stringdi"
                        },
                        "passphrase": {
                            "description": "Passphrase for the key",
                            "$ref": "#/definitions/stringdi"
                        }
                    },
                    "required": [ "input", "algo", "key" ]
                }
            },
            "required": [ "<decrypt>" ]
        },
        "sign": {
            "$id": "#encrypt",
            "description": "Create a cryptographic signature",
            "properties": {
                "<sign>": {
                    "properties": {
                        "input": {
                            "$ref": "#/definitions/stringdi"
                        },
                        "algo": {
                            "description": "Encryption algorithm",
                            "type": "string"
                        },
                        "key": {
                            "description": "Cryptographic key",
                            "$ref": "#/definitions/stringdi"
                        },
                        "passphrase": {
                            "description": "Passphrase for the key",
                            "$ref": "#/definitions/stringdi"
                        }
                    },
                    "required": [ "input", "algo", "key" ]
                }
            },
            "required": [ "<sign>" ]
        },
        "verify": {
            "$id": "#verify",
            "description": "Verify a cryptographic signature",
            "properties": {
                "<verify>": {
                    "properties": {
                        "input": {
                            "$ref": "#/definitions/stringdi"
                        },
                        "signature": {
                            "$ref": "#/definitions/stringdi"
                        },
                        "algo": {
                            "description": "Encryption algorithm",
                            "type": "string"
                        },
                        "key": {
                            "description": "Cryptographic key",
                            "$ref": "#/definitions/stringdi"
                        },
                        "passphrase": {
                            "description": "Passphrase for the key",
                            "$ref": "#/definitions/stringdi"
                        }
                    },
                    "required": [ "input", "signature", "algo", "key" ]
                }
            },
            "required": [ "<verify>" ]
        },
        
        "booleandi": {
            "description": "A boolean or a data instruction",
            "oneOf": [
                { "type": [ "null", "boolean" ] },
                { "$ref": "#" }
            ]
        },
        "stringdi": {
            "description": "A string or a data instruction",
            "oneOf": [
                { "type": "string" },
                { "$ref": "#" }
            ]
        },
        "numberdi": {
            "description": "A number or a data instruction",
            "oneOf": [
                { "type": "number" },
                { "$ref": "#" }
            ]
        },
        "objectdi": {
            "description": "An object or a data instruction",
            "oneOf": [
                { "type": "object", "additionalProperties": "true" },
                { "$ref": "#" }
            ]
        },
        "arraydi": {
            "description": "An array or a data instruction",
            "oneOf": [
                { "type": "array" },
                { "$ref": "#" }
            ]
        }
    }
}
