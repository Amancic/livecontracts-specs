{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://specs.livecontracts.io/draft-01/03-event-chain/schema.json#",
    "title": "Live Contracts event chain schema",
    "description": "The event chain is an immutable log",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string",
            "format": "uri"
        },
        "id": {
            "description": "Unique identifier for the event chain",
            "type": "string",
            "format": "uri"
        },
        "events": {
            "description": "Chained events",
            "type": "array",
            "items": {
                "$ref": "#event"
            }
        }
    },
    "required": [ "$schema", "events" ],
    "definitions": {
        "event": {
            "$id": "#event",
            "type": "object",
            "properties": {
                "$schema": {
                    "type": "string",
                    "format": "uri"
                },
                "previous": {
                    "description": "Hash to previous event",
                    "type": [ "null", "string" ],
                    "pattern": "[A-F0-9]{64}"
                },
                "body": {
                    "description": "Body of the event like an action or comment",
                    "type": "object",
                    "additionalProperties": true,
                    "not": {
                        "properties": {
                            "date": {},
                            "hash": {},
                            "signature": {},
                            "receipt": {}
                        }
                    }
                },
                "date": {
                    "description": "Date/time the event was created",
                    "type": "string",
                    "format": "date-time"
                },
                "signature": {
                    "description": "Cryptographic signature",
                    "type": "string"
                },
                "hash": {
                    "description": "SHA256 hash of event",
                    "type": "string",
                    "pattern": "[A-F0-9]{64}"
                },
                "receipt": {
                    "$ref": "#receipt"
                }
            },
            "additionalProperties": true
        },
        "receipt": {
            "$id": "#receipt",
            "type": "object",
            "properties": {
                "system": {
                    "description": "Blockchain used for anchoring",
                    "type": "string"
                },
                "transaction": {
                    "description": "Transaction id",
                    "type": "string"
                },
                "root": {
                    "description": "Merkle root",
                    "type": "string"
                }
            },
            "required": [ "hash" ]
        }
    }
}
