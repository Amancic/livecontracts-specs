{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://specs.livecontracts.io/draft-01/03-event-chain/schema.json#",
    "title": "Live Contracts Event Chain schema",
    "description": "The event chain is an immutable log",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string",
            "format": "uri"
        },
        "id": {
            "description": "Unique identifier for the event chain",
            "type": "string",
            "format": "uri"
        },
        "events": {
            "description": "Chained events",
            "type": "array",
            "items": {
                "$ref": "#event"
            }
        },
        "receipts": {
            "descriptions": "Receipts from anchoring on the blockchain",
            "type": "array",
            "items": {
                "$ref": "#receipt"
            }
        }
    },
    "required": [ "$schema", "events", "receipts" ],
    "definitions": {
        "event": {
            "$id": "#event",
            "type": "object",
            "properties": {
                "$schema": {
                    "type": "string",
                    "format": "uri"
                },
                "date": {
                    "description": "Date/time the comment was created",
                    "type": "string",
                    "format": "date-time"
                },
                "signature": {
                    "description": "Cryptographic signature",
                    "type": "string"
                }
            },
            "additionalProperties": true
        },
        "receipt": {
            "$id": "#receipt",
            "type": "object",
            "properties": {
                "hash": {
                    "description": "sh256 hash",
                    "type": "string"
                },
                "system": {
                    "description": "Blockchain used for anchoring",
                    "type": "string"
                },
                "transaction": {
                    "description": "Transaction id",
                    "type": "string"
                }
            }
        }
    }
}
