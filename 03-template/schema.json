{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://specs.livecontracts.io/draft-01/03-template/schema.json#",
    "title": "Live Contracts template schema",
    "description": "A definition of a contract template",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string",
            "format": "uri"
        },
        "id": {
            "description": "Unique identifier for the template",
            "type": "string",
            "format": "uri"
        },
        "name": {
            "description": "Template name",
            "type": "string"
        },
        "description": {
            "description": "Long description",
            "type": "string"
        },
        "form": {
            "description": "Form definition or form id",
            "anyOf": [
                {
                    "type": "string",
                    "format": "uri"
                },
                {
                    "$ref": "http://specs.livecontracts.io/draft-01/05-form/schema.json#"
                }
            ]
        },
        "content": {
            "description": "Contract in natural language",
            "oneOf": [
                { "type": "string" },
                { "$ref": "#linked_content" }
            ]
        },
        "content_type": {
            "description": "Media type of the content",
            "type": "string"
        },
        "content_encoding": {
            "description": "Encoding of the content",
            "type": "string"
        },
        "locale": {
            "description": "ISO-639 locale",
            "type": "string",
            "pattern": "^[a-z]{2}(_[A-Z]{2})?$"
        },
        "scenarios": {
            "description": "Scenarios that are linked to this template",
            "type": "array",
            "items": {
                "$ref": "#scenario"
            }
        }
    },
    "dependencies": {
        "content": [ "content_type" ]
    },
    "additionalProperties": true,
    "definitions": {
        "linked_content": {
            "$id": "#linked_content",
            "type": "object",
            "properties": {
                "url": {
                    "type": "string",
                    "format": "uri"
                },
                "hash": {
                    "type": "string"
                },
                "decryptkey": {
                    "type": "string"
                }
            },
            "required": [ "url", "hash" ]
        },
        "scenario": {
            "$id": "#scenario",
            "type": "object",
            "properties": {
                "id": {
                    "description": "Scenario id",
                    "type": "string",
                    "format": "uri"
                },
                "name": {
                    "description": "Scenario name",
                    "type": "string"
                },
                "paragraph": {
                    "description": "Reference to the paragraph this scenario applies to",
                    "type": "string"
                }
            },
            "required": [ "id" ]
        }
    }
}