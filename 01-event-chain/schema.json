{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://specs.livecontracts.io/draft-01/01-event-chain/schema.json#",
    "title": "Live Contracts event chain schema",
    "description": "The event chain is an immutable log",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string",
            "format": "uri"
        },
        "id": {
            "description": "Unique identifier for the event chain",
            "type": "string",
            "format": "uri"
        },
        "events": {
            "description": "Chained events",
            "type": "array",
            "items": {
                "$ref": "#event"
            }
        }
    },
    "required": [ "$schema", "events" ],
    "definitions": {
        "event": {
            "$id": "#event",
            "type": "object",
            "properties": {
                "$schema": {
                    "type": "string",
                    "format": "uri"
                },
                "body": {
                    "description": "Body of the event",
                    "type": "string",
                    "contentEncoding": "base64",
                    "contentMediaType": "application/json"
                },
                "previous": {
                    "description": "Hash to previous event",
                    "type": "string",
                    "pattern": "[A-F0-9]{64}"
                },
                "signkey": {
                    "description": "Public key for signature",
                    "type": "string"
                },
                "signature": {
                    "description": "Cryptographic signature",
                    "type": "string"
                },
                "hash": {
                    "description": "Hash of the event",
                    "type": "string"
                },
                "receipt": {
                    "$ref": "#receipt"
                }
            }
        },
        "receipt": {
            "$id": "#receipt",
            "description": "Receipt for anchoring",
            "type": "object",
            "properties": {
                "system": {
                    "description": "Blockchain used",
                    "type": "string"
                },
                "transaction": {
                    "description": "Transaction id",
                    "type": "string"
                },
                "root": {
                    "description": "Merkle root",
                    "type": "string"
                }
            },
            "required": [ "system", "transaction" ]
        }
    }
}
