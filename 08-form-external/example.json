{
    "$schema": "https://livecontracts.io/draft-01/04-form/schema#",
    "id": "lt:/forms/demoform",
    "title": "Demo form for external data",
    "definition": [
        {
            "label": "External",
            "group": "external",
            "helptext": "<p>This step will perform an extern request at <a href=\"https://jsonplaceholder.typicode.com\">https://jsonplaceholder.typicode.com</a>.</p><p>Try typing in <code>est</code>.</p>",
            "fields": [
                {
                    "$schema": "https://livecontracts.io/draft-01/08-form-external/schema#external_select",
                    "label": "Post",
                    "name": "post",
                    "url": "http://jsonplaceholder.typicode.com/posts",
                    "optionValue": "id",
                    "optionText": "title"
                },
                {
                    "$schema": "https://livecontracts.io/draft-01/04-form/schema#select",
                    "label": "Comment",
                    "name": "comment",
                    "url": "http://jsonplaceholder.typicode.com/posts/{{ external.post }}/comments",
                    "optionValue": "id",
                    "optionText": "name",
                    "external_source": true
                },
                {
                    "$schema": "https://livecontracts.io/draft-01/04-form/schema#select",
                    "label": "Quote",
                    "name": "quote",
                    "url": "http://jsonplaceholder.typicode.com/posts/1",
                    "optionValue": "id",
                    "optionText": "value",
                    "external_source": true,
                    "jmespath": "[{id: 'title', value: title}, {id: 'body', value: body}]"
                },
                {
                    "$schema": "https://livecontracts.io/draft-01/04-form/schema#number",
                    "label": "Photo id",
                    "name": "photo_id",
                    "value": "",
                    "helptext": "Between 1 and 5000",
                    "conditions": "",
                    "decimals": "0",
                    "min": "1",
                    "max": "5000"
                },
                {
                    "$schema": "https://livecontracts.io/draft-01/04-form/schema#external_data",
                    "name": "photo",
                    "url": "https://jsonplaceholder.typicode.com/photos/{{ external.photo_id }}",
                    "conditions": "external.photo_id != \"\""
                },
                {
                    "$schema": "https://livecontracts.io/draft-01/04-form/schema#checkbox",
                    "label": "{{ external.photo.title }}",
                    "name": "photo_checkbox",
                    "text": "{{ external.photo.url }}"
                }
            ]
        },
        {
            "label": "Conditional step",
            "group": "conditional_step",
            "conditions": "validation.show_next_step == 'show'",
            "fields": [
                {
                    "$schema": "https://livecontracts.io/draft-01/04-form/schema#text",
                    "label": "Show fields",
                    "name": "show_fields",
                    "helptext": "Type 'show' to see the fields"
                },
                {
                    "$schema": "https://livecontracts.io/draft-01/08-form-external/schema#external_select",
                    "label": "Post",
                    "name": "post",
                    "url": "http://jsonplaceholder.typicode.com/posts",
                    "optionValue": "id",
                    "optionText": "title",
                    "conditions": "conditional_step.show_fields == 'show'"
                },
                {
                    "$schema": "https://livecontracts.io/draft-01/04-form/schema#number",
                    "label": "Photo id",
                    "name": "photo_id",
                    "helptext": "Between 1 and 5000",
                    "conditions": "conditional_step.show_fields == 'show'",
                    "decimals": "0",
                    "min": "1",
                    "max": "5000"
                },
                {
                    "$schema": "https://livecontracts.io/draft-01/08-form-external/schema#external_data",
                    "name": "photo",
                    "url": "https://jsonplaceholder.typicode.com/photos/{{ conditional_step.photo_id }}",
                    "conditions": "conditional_step.photo_id != \"\" && conditional_step.show_fields == 'show'",
                    "url_field": "conditional_step.photo-url"
                }
            ]
        },
        {
            "label": "Final step",
            "group": "final",
            "conditions": "validation.show_next_step == 'show'",
            "fields": []
        }
    ]
}
