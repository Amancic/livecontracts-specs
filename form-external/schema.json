{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://specs.livecontracts.io/draft-01/form-external/schema.json#",
    "title": "Live Contracts Form external schema",
    "description": "Field definitions for fetch external data using HTTP GET",
    "definitions": {
        "external_select": {
            "$id": "#external-select",
            "label": "External select",
            "description": "Input control to select from an external source",
            "type": "object",
            "properties": {
                "$schema": {
                    "type": "string",
                    "format": "uri",
                    "const": "http://specs.livecontracts.io/draft-01/form-external/schema.json#textarea"
                },
                "label": { "$ref": "http://specs.livecontracts.io/draft-01/form#/definitions/field_label" },
                "name": { "$ref": "http://specs.livecontracts.io/draft-01/form#/definitions/field_name" },
                "url": { "$ref": "#field_url" },
                "expression": { "$ref": "#field_expression" },
                "optionValue": {
                    "description": "Property or expression to select as value",
                    "type": "string",
                    "format": "json-expression"
                },
                "optionText": {
                    "description": "Property or expression to select as display text",
                    "type": "string",
                    "format": "json-expression"
                },
                "helptext": { "$ref": "http://specs.livecontracts.io/draft-01/form#/definitions/field_helptext" },
                "conditions": { "$ref": "http://specs.livecontracts.io/draft-01/form#/definitions/field_conditions" },
                "validation": { "$ref": "http://specs.livecontracts.io/draft-01/form#/definitions/field_validation" }
            },
            "required": [ "name", "url", "optionText" ]
        },
        "external_data": {
            "$id": "#external-data",
            "label": "External data",
            "description": "Fetch external data",
            "type": "object",
            "properties": {
                "$schema": {
                    "type": "string",
                    "format": "uri",
                    "const": "http://specs.livecontracts.io/draft-01/form-external/schema.json#external_data"
                },
                "name": { "$ref": "http://specs.livecontracts.io/draft-01/form#/definitions/field_name" },
                "url": { "$ref": "#field_url" },
                "expression": { "$ref": "#field_expression" },
                "conditions": {
                    "description": "Expression which need to assert true, before the HTTP request is done",
                    "type": "string"
                }
            },
            "required": [ "name", "url" ]
        },
        
        "field_url": {
            "description": "URL to fetch data from",
            "type": "string",
            "format": "uri"
        },
        "field_expression": {
            "description": "JMESPath expression to apply on the response data",
            "type": "string",
            "format": "json-expression"
        }
    }
}
