{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://specs.livecontracts.io/draft-01/12-response/schema.json#",
    "title": "Live Contracts Response schema",
    "description": "A performed action",
    "type": "object",
    "properties": {
        "id": {
            "description": "Unique identifier for the process, action and response",
            "type": "string",
            "format": "uri"
        },
        "key": {
            "description": "Reference of the response within the action",
            "type": "string"
        },
        "action": {
            "allOf": [
                { "$ref": "http://specs.livecontracts.io/draft-01/04-scenario/schema.json#action" },
                {
                    "type": "object",
                    "properties": {
                        "key": {
                            "description": "Reference of the action within the process",
                            "type": "string"
                        }
                    },
                    "additionalProperties": true
                }
            ]
        },
        "title": {
            "description": "Action title",
            "type": "string"
        },
        "actor": {
            "description": "Actor that performed the action",
            "$ref": "http://specs.livecontracts.io/draft-01/11-process/schema.json#actor"
        },
        "display": {
            "description": "Show the response",
            "type": [ "null", "string" ],
            "enum": [ "never", "once", "always" ]
        },
        "data": {
            "description": "Response data"
        },
        "date": {
            "description": "Date/time the response was given",
            "type": "string",
            "format": "date-time"
        },
        "hash": {
            "description": "SHA256 hash",
            "type": "string"
        },
        "receipt": {
            "description": "Anchoring receipt",
            "$ref": "http://specs.livecontracts.io/draft-01/01-event-chain/schema.json#receipt"
        }
    },
    "additonalProperties": true
}
